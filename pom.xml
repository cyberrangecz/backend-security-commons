    <repositories>
        <repository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <project.version>1.0.0</project.version>
        <project-groupId.name>cz.muni.ics.kypo</project-groupId.name>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <!-- maven compiler -->
        <maven.compiler.version>3.7.0</maven.compiler.version>
        <elasticsearch.client.version>5.6.3</elasticsearch.client.version>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>


        <spring-cloud.version>Finchley.RELEASE</spring-cloud.version>
        <swagger.version>2.8.0</swagger.version>
        <mitre.oidc.version>1.3.2</mitre.oidc.version>
        <modelmapper.version>0.7.5</modelmapper.version>
        <jackson.version>2.9.5</jackson.version>
    </properties>

